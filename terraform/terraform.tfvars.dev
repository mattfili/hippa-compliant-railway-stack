# ==============================================================================
# Development Environment Configuration
# ==============================================================================
# Cost-optimized settings for development environment
# ==============================================================================

# Environment
environment = "dev"
aws_region  = "us-east-1"

# VPC Configuration
vpc_cidr            = "10.0.0.0/16"
availability_zones  = ["us-east-1a", "us-east-1b", "us-east-1c"]
enable_nat_gateway  = true
enable_vpc_endpoints = true

# Networking
railway_ip_ranges = []  # Populate with Railway IP ranges from documentation

# KMS
enable_key_rotation = true

# S3
enable_lifecycle_policies = true
documents_bucket_name     = ""  # Auto-generated name

# RDS - Development Configuration (Cost-Optimized)
rds_instance_class    = "db.t3.medium"  # 2 vCPUs, 4GB RAM
rds_allocated_storage = 20              # 20GB storage
rds_multi_az          = false           # Single-AZ for cost savings
enable_read_replica   = false           # No read replica in dev
backup_retention_days = 7               # Reduced retention for dev
deletion_protection   = false           # Allow deletion in dev

# AWS Config
sns_alert_email         = ""  # Optional: Add email for Config alerts
enable_auto_remediation = false

# Additional Tags
tags = {
  CostCenter = "Development"
  Owner      = "DevOps"
}
